{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "esNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@dmx-controller/*": [
        "./bazel-bin/*",
        "./*"
      ]
    }
  },
  "include": [
    "bazel-bin/*",
    "core/**/*.js",
    "editor/src/**/*.d.ts",
    "editor/src/**/*.ts",
    "editor/src/**/*.tsx",
  ]
}