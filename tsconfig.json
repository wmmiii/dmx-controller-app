{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@dmx-controller/*": [
        "./bazel-bin/*",
        "./*"
      ]
    },
    "types": [
      "./editor/src/types"
    ],
  },
  "include": [
    "bazel-bin/*",
    "core/**/*.js",
    "editor/src/**/*.d.ts",
    "editor/src/**/*.ts",
    "editor/src/**/*.tsx",
  ]
}